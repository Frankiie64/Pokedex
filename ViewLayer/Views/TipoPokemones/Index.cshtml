@model List<BusinessLayer.ModelView.TiposPokemonesDto>

@{
    ViewData["Title"] = "Tipo Pokemones";
}
<div class="container-fluid" style="width: 85%;">

    <div class="row">
        <div class="col-5 offset-8 ps-5">
            <a asp-controller="TipoPokemones" asp-action="CreateTipoPokemon" type="button" class="btn btn-success m-2">Agregar nuevo tipo de pokemon<i class=" fs-5 pb-3 fa-plus"></i></a>
        </div>
    </div>


    @if (Model == null || Model.Count <= 1)
    {
        <div class="container mx-auto my-auto">
            <h2>No hay ningun tipo de pokemon creado</h2>
            <p>Crea alguno para que tus pokemones tengan habilidades unicas y especiales</p>
        </div>
    }
    else
    {
        @foreach (var item in Model)
        {
            @if (item.Id != 1)
            {
                    <div class="card mb-3" style="max-width: 100%;">
                        <div class="row g-0">
                            <div class="col-md-4 text-center py-5 ">
                                <img src="@item.ImagenUrl" class="img-fluid rounded-start mx-auto" alt="@item.Titulo" style="width:45%; height:auto;">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body  text-start">
                                    <h5 class="card-title">@item.Titulo</h5>
                                    <p class="card-text">@item.Description</p>
                                </div>
                                <div class="p-3 pb-4 text-end mt-3">
                                    <a asp-controller="TipoPokemones" asp-action="EditipoPokemon" asp-route-id="@item.Id" type="button" class="btn btn-info me-1 text-light">Editar <i class="fa-solid fa-file-pen"></i></a>
                                    <a asp-controller="TipoPokemones" asp-action="DeletetipoPokemon" asp-route-id="@item.Id" type="button" class="btn btn-danger ">Eliminar  <i class="fa-solid fa-trash"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
    }
</div>